<h1>Add an Original Work:</h1>

<%= form_for(@new_piece) do |f| %>
	<div class="form-group">
		<%= f.label :image_url %>
		<%= f.text_field :image_url, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :'Tell us about your piece:' %>
		<%=f.text_area :art_description, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :genre %>
		<%= f.text_field :genre, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :asking_price %>
		<%= f.text_field :original_value, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.submit "Placeholder submit -- Put paperclip stuff here", :class => "btn btn-success" %>
	</div>
<% end %>

<%= link_to "Nevermind", "/", :class => "btn btn-warning" %>
